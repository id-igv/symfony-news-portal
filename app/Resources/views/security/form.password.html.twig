{# app/Resources/views/security/form.password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Сброс пароля{% endblock %}
{% block menu %}{% endblock %}

{% block body %}
<div class="w3-display-container" style="height:290px">
	<div class="w3-card w3-col l6 m8 w3-display-middle">
		<div class="w3-bar w3-content">
			<a class="w3-bar-item w3-mobile w3-left" href="{{ path('login') }}">&#8592; Вход</a>
			<a href="{{ path('homepage') }}" class="w3-bar-item w3-mobile w3-rest w3-center">Главная</a>
			<a class="w3-bar-item w3-mobile w3-right" href="{{ path('registration') }}">Регистрация</a>
		</div>
		{% for flashMessage in app.session.flashBag.get('notice') %}
			<div class="w3-container w3-center w3-text-red">{{- flashMessage -}}</div>
		{% endfor %}
		<br>
		
		<form class="w3-padding" action="{{ path('reset_pwd') }}" method="post">
			<p><input class="w3-input w3-padding w3-center w3-border w3-border-black" style="border-bottom:none;" placeholder="Новый пароль" type="password" name="plainPassword" required /><p>
			<p><input class="w3-input w3-padding w3-center w3-border w3-border-black" style="border-bottom:none;" placeholder="Повторите пароль" type="password" name="repeated_plainPassword" required /></p>
			<input type="text" name="key" value="{{ resetKey is defined ? resetKey : null }}" style="display:none" contenteditable="false" />
			<div class="w3-section w3-center">
				<input class="w3-button w3-border w3-black" type="submit" name="formSubmit" value="Подтвердить"/>
			</div>
		</form>
	</div>
</div>
{{ dump(form_dump) }}
{% endblock %}